// teste.amb
func main() -> int {
  numero: int = 42;
  pi: float = 3.14;
  ativo: bool = true;
 
  print("=== TESTE VARIÁVEIS ===");
  print(numero);
  print(pi);
  print(ativo);
 
  print("=== TESTE IF/ELSE ===");
  if (numero > 40) {
    print("Número é maior que 40");
  } else {
    print("Número é menor ou igual a 40");
  }
 
  print("=== TESTE FOR LOOP ===");
  soma: int = 0;
  for (i: int = 1; i <= 3; i = i + 1) {
    print(i);
    soma = soma + i;
  }
  print("Soma total:");
  print(soma);
 
  print("=== TESTE WHILE LOOP ===");
  contador: int = 0;
  while (contador < 2) {
    print(contador);
    contador = contador + 1;
  }
 
  print("=== TESTE OPERAÇÕES ===");
  a: float = 10.5;
  b: float = 2.0;
  resultado: float = (a + b) * (a - b);
  print(resultado);
  print("=== TESTE LÓGICOS ===");
  teste_logico: bool = (numero == 42) && ativo;
  print(teste_logico);
 
  print("=== TESTE CÁLCULO ===");
  total: float = 0.0;
  sinal: float = 1.0;
  for (i: int = 0; i < 5; i = i + 1) {
    total = total + sinal / (i + 1.0);
    sinal = -sinal;
  }
  print(total);
  print("🎉 TODOS OS TESTES PASSARAM!");
 
  return 0;
}